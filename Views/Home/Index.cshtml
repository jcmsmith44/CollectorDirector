@model List<CollectorDirector.Models.Collection>

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to Collector Director!</h1>
</div>

@if (Model.Count != 0)
{
    <table class="table">
        <tr>
            <th>Name</th>
        </tr>

        @foreach (var collection in Model)
        {
            <tr>
                <td>@collection.CollectionName</td>
                <td><button type="button" name="edit">Edit</button></td>
                <td><form method="post" action="/"><button asp-controller="Home" asp-action="RemoveCollection" asp-route-id=@collection.ID>Remove</button></form></td>
            </tr>
        }
    </table>
}

@if (Model.Count == 0)
{
    <p>You haven't created any collections yet</p>
}
<div>
    <p><a asp-controller="Home" asp-action="CreateCollection">Create Collection</a></p>
</div>