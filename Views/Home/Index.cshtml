@model List<CollectorDirector.Models.Collection>

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to Collector Director!</h1>
</div>

<div>
    <p><a asp-controller="Home" asp-action="CreateCollection">Create Collection</a></p>
</div>

@if (Model.Count != 0)
{
    <table class="table">
        <tr>
            <th>Name</th>
        </tr>

        @foreach (var collection in Model)
        {
            <tr>
                <td><a asp-controller="Collection" asp-action="DisplayCollection" asp-route-id="@collection.ID">@collection.CollectionName</a></td>
                <td><input type="button" value="Edit" onclick="location.href='/Home/EditCollection/@collection.ID'" /></td>
                <td><input type="button" value="Remove" onclick="location.href='/Home/RemoveCollection/@collection.ID'" /></td>
            </tr>
        }
    </table>
}

@if (Model.Count == 0)
{
    <p>You haven't created any collections yet</p>
}
