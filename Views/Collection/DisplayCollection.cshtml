@model List<CollectorDirector.Models.CollectionItem>

<h1>Your Collection</h1>

<div>
    <p><a asp-controller="Collection" asp-action="AddCollectionItem" asp-route-thisID="@ViewData["CollectionID"]">Add Item</a></p>
</div>

@if (Model.Count != 0)
{
    <table class="table">
        <tr>
            <th>Name</th>
            <th>Owned Status</th>
            <th>Rarity</th>
            <th>UserNote</th>
        </tr>

        @foreach (var collectionItem in Model)
        {
    <tr>
        <td>@collectionItem.ItemName</td>
        @if (collectionItem.IsOwned == false)
        {
            <td>Owned</td>
        }

        @if (collectionItem.IsOwned == true)
        {
            <td>Unowned</td>
        }
        <td>@collectionItem.Rarity</td>
        <td>@collectionItem.UserNote</td>
        <td><input type="button" value="Edit" onclick="location.href='/Collection/EditCollectionItem/@collectionItem.ID'" /></td>
        <td><input type="button" value="Remove" onclick="location.href='/Collection/RemoveCollectionItem/@collectionItem.ID'" /></td>
    </tr>
        }
    </table>
}

@if (Model.Count == 0)
{
    <p>There are no items in this collection</p>
}
